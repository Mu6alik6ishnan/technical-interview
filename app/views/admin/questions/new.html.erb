<%= simple_form_for @question, :url => admin_questions_path do |q| %>
  <%= q.input :topic, :label => "Topic id", :placeholder => "bla" %>
	<%= q.input :problem, :as => :ckeditor, :input_html => { :ckeditor => {:toolbar => 'Mini'} } %>
	<%= q.input :solution, :label => "Enter the right answer" %>
  <%= q.submit 'Create', :class => 'btn btn-danger' %>
<% end %>
