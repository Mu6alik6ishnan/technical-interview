<style type="text/css">

body {
	font-family: Constantia, "Lucida Bright", Lucidabright, "Lucida Serif", Lucida, "DejaVu Serif", "Bitstream Vera Serif", "Liberation Serif", Georgia, serif;
}

.titles{
		border: 5px solid yellow;
}

.interviewbox{
	padding-top: 20px;
	margin-top: 10px;
}

.set{
	border: 1px solid #ccc;
	border-color: #e4e4e4 #bebebd #bebebd #e4e4e4;
	padding: 5px 0px 5px 0px;
	margin-top: 5px;
	margin-bottom: 5px;
}
.set p{
	padding: 10px 5px 5px 10px;
	font-family: 'Lato', sans-serif;
	font-size: 20px;
}

.quiz-box{
	-moz-box-shadow: 1px 1px 2px 0 #d0d0d0;
	-webkit-box-shadow: 1px 1px 2px 0 #d0d0d0;
	box-shadow: 1px 1px 2px 0 #d0d0d0;
	background: #fff;
	border: 1px solid #ccc;
	border-color: #e4e4e4 #bebebd #bebebd #e4e4e4;
	margin-top: 25px;
	margin-bottom: 25px;
	padding: 10px;
	font-family: 'Lato', sans-serif;
}

.quiz-box h2{
	font-size: 35px;
	font-weight: 300;
}

.quiz-box p{
	font-size: 20px;
}

.question{
	background: #fff;
	border: 1px solid #ccc;
	border-color: #e4e4e4 #bebebd #bebebd #e4e4e4;
	font-family: 'Fira Sans', sans-serif;
}

.button{
	padding-top: 25px;
}

</style>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
				<h4 class="modal-title" id="myModalLabel">Questions and Answers</h4>
			</div>
			<div class="modal-body">
						<% @interviews.each do |question| %>
							<div class="quiz-box col-xs-10 col-xs-offset-1">
									<div class="set">
										<p><strong> - <%= question.problem %></strong></p>
									</div>
									<div class="set">
										<p><%= question.solution %></p>
									</div>
							</div>
						<% end %>

						<!-- 	quiz-box for title
									interview-box container for question and answer
									set container for question -->



			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
				<button type="button" class="btn btn-primary">Save changes</button>
			</div>
		</div>
	</div>
</div>

<div class="quiz-box col-xs-10 col-xs-offset-1">
<h2><strong><%= current_interview.title %></strong></h2>
<p><%= current_interview.description %></p>
</div>
<br><br><br>

<div class="interviewbox">
<% @interviews.each do |question| %>
	<div class="set col-xs-10 col-xs-offset-1">
				<p><%= question.problem %></p>
	</div>
<% end %><br><br>
</div>

<div class="button col-xs-2 col-xs-offset-5">
<!-- Button trigger modal -->
<button type="button" class="btn btn-primary btn-lg text-center" data-toggle="modal" data-target="#myModal">
	Show the answers
</button>
</div>
